<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!--SPLASH THEME DARK-->
	<style name="Theme.NavigationGraph.RedBmw.Starting" parent="Theme.SplashScreen">

		<!--
			By default if windowSplashScreenAnimatedIcon is not availaible, then your normal app icon is used. But only on Android 12
			Lower than Android 12 - you get the default Android icon which is probably not what you want.
		-->
		<item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

		<!--
			By default if you don't supply a windowSplashScreenBackground - then the default will be white for Dark theme Off and black for Dark theme On
			If you do supply a colour then that colour will be the same colour for both Theme Dark and Dark Theme off 
		-->

		<item name="windowSplashScreenBackground">@android:color/background_dark</item>			<!--This Works - but can't use ?attr/colorSecondary here -->
		<!--<item name="windowSplashScreenBackground">?android:colorBackground</item>-->			<!-- Ok too -->
		<!--<item name="windowSplashScreenBackground">?android:colorBackground</item>-->
		<!--
			You do need at minimum a postSplashScreenTheme
		-->

		<item name="postSplashScreenTheme">@style/Theme.NavigationGraph.RedBmw</item>

	</style>
	
	
	
	<!--RED BMW THEME-->

	<style name="Theme.NavigationGraph.RedBmw" parent="Theme.NavigationGraph.RedBmw.Base">

		<!--Vehicle Image-->
		<item name="vehicle_image">@drawable/bmw5</item>

		<!--AlertDialogRoundedCornersTheme style-->
		<item name="materialAlertDialogTheme">@style/AlertDialogRoundedCornersTheme</item>

	</style>

	<!-- Dark theme. -->
	<style name="Theme.NavigationGraph.RedBmw.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="colorPrimary">@color/red_200</item>
		<item name="colorPrimaryVariant">@color/red_200_dark</item>
		<item name="colorOnPrimary">@color/black</item>

		<!-- headings in Preferences and checkboxes etc.-->
		<item name="colorSecondary">@color/red_200_light</item>
		<item name="colorOnSecondary">@color/black</item>

		<item name="colorSurface">@color/transparent_black</item>
		<item name="colorOnSurface">@color/white</item>

		<item name="colorError">@color/error_dark</item>
		<item name="colorOnError">@color/black</item>

		<item name="colorOnBackground">@color/white</item>
		<item name="android:colorBackground">@color/black</item>
		
		<!--<item name="android:windowBackground">?android:colorBackground</item>-->
		
		<!-- Status bar color. -->
		<!-- Gmail does this -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
		
		<!-- NavigationBar-->
		<item name="android:windowLightNavigationBar">false</item>
		<!--Navigation Bar color-->
		<item name="android:navigationBarColor">#80000000</item>
		
	</style>
	
	<!--END OF RED BMW theme-->

